{
  "name": "marsoft",
  "version": "0.0.1",
  "homepage": "https://barisicgroup.github.io/marsoft_ngl_fork/",
  "description": "Scalable molecular graphics for the web",
  "main": "dist/ngl.umd.js",
  "module": "dist/ngl.esm.js",
  "types": "declarations/ngl.d.ts",
  "scripts": {
    "lint": "npm run lint-src && npm run lint-test && npm run lint-script",
    "lint-src": "standard \"src/**/*.js\"",
    "lint-test": "standard --env mocha \"test/**/*.js\"",
    "lint-script": "standard --global stage --global NGL \"examples/scripts/**/*.js\"",
    "ts": "tsc && cpy --parents \"src/**/*.{vert,frag,glsl}\" webapp/build/js/ && cpy \"lib/*.js\" webapp/build/js/lib/ && cpy \"package.json\" webapp/build/js/ && cpy \"src/polyfills.js\" webapp/build/js/src/",
    "dts": "tsc -d --declarationDir \"declarations\" --emitDeclarationOnly --skipLibCheck",
    "prebuild": "npm run lint",
    "build": "npm run ts && rollup -c && sorcery -i webapp/build/js/ngl.dev.js && (rmdir /s /q \"webapp/build/marilia_data\" 2>nul || echo > nul) && cpy --parents \"marilia_data/**/*.*\" webapp/build/",
    "postbuild": "node ./scripts/makeScriptsList.js",
    "test": "jest",
    "preversion": "npm test",
    "version": "npm run build-min && git add -A dist",
    "postversion": "git push && git push --tags",
    "prepare": "npm test",
    "devpublish": "npm publish --tag next",
    "doc": "typedoc --mode file --includes doc/usage/ --media doc/usage/ --out webapp/build/docs/ ./src/",
    "watch": "rollup -c -w",
    "predeploy": "npm run build",
    "deploy": "gh-pages -m NewVersionDeployed -d webapp",
    "gallery": "./scripts/gallery.sh",
    "prerelease": "./scripts/release.sh prerelease",
    "min": "del webapp/dist > nul && mkdir webapp/dist && uglifyjs webapp/build/js/ngl.dev.js -cm > webapp/dist/ngl.js && cpy webapp/build/js/ngl.esm.js webapp/dist && cpy webapp/build/js/ngl.umd.js webapp/dist && cpy webapp/build/js/ngl.*.js.map webapp/dist",
    "build-min": "npm run build && npm run min"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "\\.spec\\.ts|kin.*test.ts$",
    "testURL": "http://localhost"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/barisicgroup/marsoft_ngl_fork.git"
  },
  "bugs": {
    "url": "https://github.com/arose/ngl/issues"
  },
  "files": [
    "dist"
  ],
  "author": "Alexander Rose <alexander.rose@weirdbyte.de>",
  "contributors": [],
  "license": "MIT",
  "keywords": [
    "molecular graphics",
    "molecular structure",
    "chemical structure",
    "science"
  ],
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-external-helpers": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/register": "^7.12.10",
    "@types/chroma-js": "^1.3.5",
    "@types/jest": "^23.3.14",
    "@types/node": "^10.17.51",
    "@types/promise-polyfill": "^6.0.0",
    "@types/signals": "1.0.1",
    "@types/sprintf-js": "^1.1.2",
    "arkit": "^1.6.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babelrc-rollup": "^3.0.0",
    "chai": "^4.1.1",
    "cpy-cli": "^3.1.0",
    "eslint": "^5.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^25.5.1",
    "mocha": "^5.2.0",
    "rollup": "^0.63.5",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-internal": "^1.0.4",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-watch": "^4.3.1",
    "slimerjs": "^1.0.0",
    "sorcery": "^0.10.0",
    "source-map-support": "^0.5.6",
    "standard": "^11.0.1",
    "ts-jest": "^25.5.1",
    "typedoc": "^0.18.0",
    "typescript": "^3.8.3",
    "uglify-js": "^3.12.4"
  },
  "dependencies": {
    "chroma-js": "^1.3.7",
    "gh-pages": "^3.1.0",
    "promise-polyfill": "^8.2.0",
    "signals": "^1.0.0",
    "sprintf-js": "^1.1.2",
    "three": "^0.118.0",
    "update": "^0.7.4"
  }
}
